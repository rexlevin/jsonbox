{
  "name": "jsonbox",
  "version": "2.1.9",
  "description": "JsonBox-跨平台的json格式化工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-pack": "electron-builder --dir",
    "build-dist:linux": "electron-builder -l",
    "build-dist:win": "electron-builder -w"
  },
  "build": {
    "appId": "com.lizl6.jsonbox",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "directories": {
      "output": "./dist"
    },
    "linux": {
      "target": [
        "appimage"
      ]
    },
    "win": {
      "icon": "./src/logo.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "shortcutName": "json工具箱"
    }
  },
  "keywords": [
    "json"
  ],
  "author": "lizl6",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^19.0.8"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.2",
    "custom-electron-prompt": "^1.5.1",
    "electron-store": "^8.1.0",
    "nanoid": "^3.3.4",
    "vue": "^3.2.37",
    "x2js": "^3.4.4"
  }
}
