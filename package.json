{
  "name": "jsonbox",
  "version": "1.4.1",
  "description": "JsonBox-跨平台的json格式化工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-pack": "electron-builder --dir",
    "build-dist:linux": "electron-builder -l",
    "build-dist:win": "electron-builder -w"
  },
  "build": {
    "appId": "com.lizl6.jsonbox",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "directories": {
      "output": "./dist"
    },
    "linux": {
      "target": [
        "appimage"
      ]
    },
    "win": {
      "icon": "./src/logo.png",
      "target": [
        "nsis"
      ]
    }
  },
  "keywords": [
    "json"
  ],
  "author": "lizl6",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^19.0.8"
  },
  "dependencies": {
    "vue": "^3.2.37"
  }
}
